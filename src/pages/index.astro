---
import CoverGenerator from '../components/CoverGenerator.jsx';
import '../styles/global.css'; 
---

<html lang="zh-CN">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" href="/cover-forge.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>CoverForge // Article Cover Generator</title>
		
	</head>
	<body class="bg-white dark:bg-black min-h-screen text-[#ffffff] font-sans selection:bg-red-600 selection:text-white">

		{/* 主要内容区 */}
		<main class="py-12">
			<CoverGenerator client:only="react" />
		</main>

	</body>
</html>

<style is:global>
	/* 全局样式微调 */
	body {
		/* 修复某些浏览器的滚动条样式 */
		scrollbar-width: thin;
		scrollbar-color: #333 #0a0a0a;
	}
	
	/* 自定义滚动条 Webkit */
	.custom-scrollbar::-webkit-scrollbar {
		width: 4px;
	}
	.custom-scrollbar::-webkit-scrollbar-track {
		background: #000;
	}
	.custom-scrollbar::-webkit-scrollbar-thumb {
		background: #333;
	}
	.custom-scrollbar::-webkit-scrollbar-thumb:hover {
		background: #ff1f1f;
	}
</style>